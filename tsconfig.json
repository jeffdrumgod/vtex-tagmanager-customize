{
	"compilerOptions": {
		"target": "es5",
		"downlevelIteration": true,
		"lib": [
			"dom",
			"dom.iterable",
			"es2015",
			"scripthost"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			],
			"@root/": [
				"./*",
			],
		}
	},
	"include": [
		"./src/**/*.ts", "src/js/helpers/store.js",
	],
	"exclude": [
		"node_modules"
	]
}